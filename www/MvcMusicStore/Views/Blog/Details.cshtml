@model MvcMusicStore.Models.Blog

@{
    ViewBag.Title = "Blog - " + Model.Title;
}

<h2>@Model.Title</h2>

<p>
    <img alt="@Model.Title" src="@Model.BlogArtUrl" />
</p>

<div id="blog-details">
    <p>
        <em>Kategori:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Produk:</em>
        @Model.Product.Name
    </p>   
    <div class="category">
    <h3><em>@Model.Name</em> Blogs</h3>
 
    <ul id="blog-list">
        @foreach (var blog in Model.Blogs)
        {
            <li>
                <a href="@Url.Action("Details", new { id = blog.BlogId })">
                    <img alt="@blog.Title" src="@blog.BlogArtUrl" />
                    <span>@blog.Title</span>
                </a>
            </li>
        }
    </ul>
</div> 
    <p>
        <em>Harga RM:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", 
        "ShoppingCart", new { id = Model.BlogId }, "")
    </p>
</div>
