@model IEnumerable<MvcMusicStore.Models.Genre>
@{
    ViewBag.Title = "Store";
}
<a href="http://angel.exabytes.com.my/idevaffiliate.php?id=3203564_26_1_130" target="_blank"><img border="0" src="/Content/images/728x90-xtudent.jpg" width="728" height="90" alt=""></a>
<h3>Browse Genres</h3>

<p>
    Select from @Model.Count() genres:</p>
<ul>
    @foreach (var genre in Model)
    {
        <li>@Html.ActionLink(genre.Name, "Browse", new { genre = genre.Name })</li>
    }
</ul>
