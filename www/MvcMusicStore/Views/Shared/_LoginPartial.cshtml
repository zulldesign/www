@if (Request.IsAuthenticated) {
    <text>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <span class="hellouser">Hello, @User.Identity.Name!</span> <a href="javascript:document.getElementById('logoutForm').submit()" class="k-button">Log off</a>
            if (User.IsInRole("Administrator")) {
                @Html.ActionLink("Manage Store", "Index", "StoreManager", routeValues: null, htmlAttributes: new { @class = "k-button" })
                @Html.ActionLink("View Sales Graphs", "Graphs", "StoreManager", routeValues: null, htmlAttributes: new { @class = "k-button" })
            }   
        }
    </text>
} else {
    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "k-button" })
    @Html.ActionLink("Manage Store", "Index", "StoreManager", routeValues: null, htmlAttributes: new { @class = "k-button" })
    @Html.ActionLink("View Sales Graphs", "Graphs", "StoreManager", routeValues: null, htmlAttributes: new { @class = "k-button" })
}