<script id="album-details-template" type="text/x-kendo-template">
    <div class="album-details">
        <div class="image-container">
            <img src="${baseUrl + data.AlbumArtUrl}"  />
        </div>
        <div class="album-info-container">
            
            <div class="artist" data-bind="text: data.Artist.Name"></div>
            <div><span class="price" data-bind="textFormatted: data.Price" data-format="c"></span><span class="price-currency">USD</span></div>
            <div>X<input type="number" value="1" min="1" max="100" data-role="numerictextbox" data-decimals="0" data-format="n0" data-bind="value: quantity, events: { spin: updateQty }" /><span class="price-currency">qty</span></div>
            <div class="total" data-bind="textFormatted: total" data-format="c"></div>
            <a class="k-button" data-bind="click: addToCart">Add to Cart</a>
        </div>
    </div>
</script>