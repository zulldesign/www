@{
    ViewBag.Title = "Home Page";
}
<h2>@ViewBag.Message</h2>

@using (Html.BeginForm("PostToPaypal", "Home"))
{
<div>
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                Item Name:
            </td>
            <td>
                <input type="text" name="item" value="book" readonly />
            </td>
        </tr>
        <tr>
            <td>
                Price:
            </td>
            <td>
                $<input type="text" name="amount" value="200" readonly />
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <input type="submit" name="btnsubmit" value="Pay with Paypal" />
            </td>
        </tr>
    </table>
</div>
}
