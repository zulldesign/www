@model IEnumerable<www.Models.Review>

@section scripts {
	<script type="text/javascript" src="/Scripts/home.js"></script>
}

<div class="reviews">
	<ul></ul>
</div>

<script type="text/html" id="reviewsTemplate">

	<h3><%= Topic %></h3>
	<p>
		<%= Content %>
	</p>
	
